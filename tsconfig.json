{
    "compilerOptions": {
     "module": "NodeNext",
     "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "strict": true,
        "lib": ["esnext"],
        "outDir": "dist",
        "baseUrl": "src",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "paths": {
            "@Vite/*": ["*"]
        }
    },
    "include": ["src/**/*", "src/server.ts", "src/declarations.d.ts"],
  }